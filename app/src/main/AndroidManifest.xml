<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mtjin.free_room_tablet">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".di.MyApplication"
        android:allowBackup="false"
        android:icon="@drawable/ic_app_main_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_app_main_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.FreeMeetingRoomReservationTablet">
        <activity
            android:name=".views.code_input.CodeInputActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.main.MainActivity"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>